<div class= "comments text-black">
  <label class="form__label d-block">Comments</label>

  <%= label_tag 'published', 'published' %>
  <%= check_box_tag('published', 'unpublished', params[:unpublished] == 'true', onclick: "toggle()") %>
  <% if params[:unpublished] == 'true' %>
    <% @post.comments.published.each do |comment| %>
      <div class="comments__field">
        <div class="comments__input">
          <%= comment.body %>
        </div>
      </div>

      <p class="form__title">Updated: <%= distance_of_time_in_words(comment.updated_at, Time.now) %> ago.</p>

      <%= link_to 'Destroy', post_comment_path(@post, comment), method: :delete, data: { confirm: 'Are you sure?' }, class: "button button--red button--small" %>
    <% end %>
  <% else %>
    <% @post.comments.unpublished.each do |comment| %>
      <div class="comments__field">
        <div class="comments__input">
          <%= comment.body %>
        </div>
      </div>

      <p class="form__title">Updated: <%= distance_of_time_in_words(comment.updated_at, Time.now) %> ago.</p>

      <%= link_to 'Published', post_comment_path(comment.post, comment), method: :patch, class: "button button--yellow button--small" %>
      <%= link_to 'Destroy', post_comment_path(comment.post, comment), method: :delete, data: { confirm: 'Are you sure?' }, class: "button button--red button--small" %>
    <% end %>
  <% end %>
</div>

<%= javascript_pack_tag 'toggle.js' %>
