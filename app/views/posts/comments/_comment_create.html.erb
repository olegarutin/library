<div class="comments">
  <div>
    <%= form_with model: [@post, @comment] do |f| %>
      <% if @comment.errors.any? %>
        <div id="form__field">
          <h4 class="form__title mt-4"><%= pluralize(@comment.errors.count, "error") %> prohibited this post from being saved:</h4>

          <ul class="p-1">
            <% @comment.errors.each do |error| %>
              <li class="form__errors"><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form__field">
        <%= f.label 'New comment', class: 'form__label' %>
        <%= f.text_area :body, class: 'form__input' %>
        <%= f.hidden_field :author_id, value: @post.author_id, class: 'form__input' %>
      </div>
      <%= f.submit 'Submit', class: 'button button--blue mb-4' %>
    <% end %>
  </div>
</div>
