<!DOCTYPE html>
<html>
  <head>
    <title>Library</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="bg-primary text-center">
    <div id="user_header">
      <% if current_user %>
      <div class="flex">
         <%= current_user.email %>
        <%= link_to "Log Out", logout_path, class: "text-black" %>
      </div>
      <% else %>
      <div class="mt-4">
        <%= link_to "Sign Up", signup_path, class: "button--white" %>
        <%= link_to "Log In", login_path, class: "button--white ms-4" %>
      </div>
      <% end %>
    </div>
    <%= yield %>
  </body>
</html>
