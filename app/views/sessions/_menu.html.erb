<div>
  <% if current_user %>
    <nav class='navbar navbar-expand-lg navbar-light bg-light'>
      <div class='container-fluid'>

        <div>
          <% if current_user.profile_image.attached? %>
            <%= image_tag current_user.profile_image, class: 'avatar avatar--small mx-4' %>
          <% end %>

          <%= current_user.full_name %>
        </div>

        <div class='ms-4'>
          <%= link_to 'Log Out', logout_path, class: 'button button--blue' %>
          <%= link_to 'Profile', author_path(current_user.id), class: 'button button--blue mx-4' %>
          <%= link_to 'Posts', posts_path, class: 'button button--blue' %>
        </div>

        <form class='d-flex' action='/search'>
          <input class='form-control me-2' type='search' name='q' placeholder='Search' aria-label='Search'>
          <button class='btn btn-outline-success' type='submit'>Search</button>
        </form>
      </div>
    </nav>
  <% else %>
    <div class='mt-4'>
      <%= link_to 'Sign Up', signup_path, class: 'button--white' %>
      <%= link_to 'Log In', login_path, class: 'button--white ms-4' %>
    </div>
  <% end %>
</div>